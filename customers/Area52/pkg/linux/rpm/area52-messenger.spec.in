%global debug_package %{nil}

Summary:          Area52 messenger
Name:             area52-messenger
Version:          {{MAJOR_VER}}.{{MINOR_VER}}.{{SUB_VER}}
Release:          {{BUILD_VER}}
Group:            Internet
License:          BSD-3-Clause
URL:              https://virgilsecurity.com/
Source0:         %{name}-%{version}.tgz

%description
Area52 messenger

%prep
%setup -q -n %{name}-%{version}

%build

%install

install -d                                                                                                       %{buildroot}%{_datarootdir}/area52-messenger
install -d                                                                                                       %{buildroot}%{_bindir}
install -d                                                                                                       %{buildroot}%{_datadir}/applications
install -d                                                                                                       %{buildroot}%{_datadir}/icons/hicolor/scalable/apps

cp -rf ./*                                                                                                       %{buildroot}%{_datarootdir}/area52-messenger
ln -s %{_datarootdir}/area52-messenger/area52-messenger.sh                                                       %{buildroot}%{_bindir}/area52-messenger
install -p -m 644 area52-messenger.desktop                                                                       %{buildroot}%{_datadir}/applications/
install -p -m 644 area52-messenger.png                                                                           %{buildroot}%{_datadir}/icons/hicolor/scalable/apps

%files
%doc VERSION_MESSENGER
%{_datarootdir}/area52-messenger
%{_bindir}/area52-messenger
%{_datadir}/applications
%{_datadir}/icons/hicolor/scalable/apps

%changelog
